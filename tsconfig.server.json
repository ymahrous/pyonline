{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "server/**/*",
    "shared/**/*",
  ],
  "exclude": [
    "client/**/*",
    "node_modules",
    "dist"
  ]
}